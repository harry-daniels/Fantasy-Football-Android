<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/fantasyGreen</item>
        <item name="colorPrimaryDark">@color/fantasyGreenDark</item>
        <item name="colorAccent">@android:color/white</item>


    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/fantasyGreenDark</item>
        <item name="tabBackground">@color/fantasyGreen</item>
        <item name="tabTextAppearance">@style/TabLayoutTheme.TextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabLayoutTheme.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fantasyGreenDark</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>